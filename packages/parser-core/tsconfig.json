{
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./",
        "sourceMap": true,
        "allowJs":true,
        "target": "es6",
        "module": "ES2022",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "declaration": true,
        "strict": false,
        "skipLibCheck": true,
        "typeRoots": [
            "node",
            "node_modules/@types",
            "../../node_modules/@types"
        ],
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "./src/lib/**/*"
    ],
    "typeAcquisition": {
        "include": [
            "jest"
        ]
    }
}